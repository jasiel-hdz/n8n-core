# ========================================
# CONFIGURACIÓN N8N
# ========================================

# Autenticación básica
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Configuración del servidor
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=https

# Configuración de webhooks
WEBHOOK_URL=https://closing-trivially-snail.ngrok-free.app
N8N_EDITOR_BASE_URL=https://closing-trivially-snail.ngrok-free.app
N8N_WEBHOOK_URL=https://closing-trivially-snail.ngrok-free.app
